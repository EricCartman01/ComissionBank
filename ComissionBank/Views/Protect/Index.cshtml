@model IEnumerable<Protect>
@{
    ViewData["Title"] = "Lançamentos Protect";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>
<a asp-action="Create" class="btn btn-default">Novo Lançamento</a>
<a asp-action="Import" class="btn btn-default">Importar</a>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <td>@Html.DisplayNameFor(model => model.Date)</td>
            <td>@Html.DisplayNameFor(model => model.ClientName)</td>
            <td>@Html.DisplayNameFor(model => model.House)</td>
            <td>@Html.DisplayNameFor(model => model.AdvisorInitials)</td>
            <td>@Html.DisplayNameFor(model => model.Product)</td>
            <td>@Html.DisplayNameFor(model => model.ProtectValue)</td>
            <td>@Html.DisplayNameFor(model => model.ProtectLiquidValue)</td>
            <td>@Html.DisplayNameFor(model => model.NetAdvisorValue)</td>
            <td>@Html.DisplayNameFor(model => model.AdvisorValue)</td>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.DateFormated)</td>
            <td>@Html.DisplayFor(x => item.ClientName)</td>
            <td>@Html.DisplayFor(x => item.House)</td>
            <td>@Html.DisplayFor(x => item.AdvisorInitials)</td>
            <td>@Html.DisplayFor(x => item.Product)</td>
            <td>@Html.DisplayFor(x => item.ProtectValueFormated)</td>
            <td>@Html.DisplayFor(x => item.ProtectLiquidValueFormated)</td>
            <td>@Html.DisplayFor(x => item.NetAdvisorValueFormated)</td>
            <td>@Html.DisplayFor(x => item.AdvisorValueFormated)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>&nbsp;
            </td>
        </tr>
        }

    </tbody>
</table>