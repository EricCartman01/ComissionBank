@model IEnumerable<House>

@{
    ViewData["Title"] = "Casas";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-default">Cadastrar Casa</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Details)</th>
            <th>@Html.DisplayNameFor(model => model.Abbreviaton)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
             @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.Name)</td>
            <td>@Html.DisplayFor(x => item.Details)</td>
            <td>@Html.DisplayFor(x => item.Abbreviaton)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>&nbsp;
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>&nbsp;
            </td>
        </tr>
        }

    </tbody>
</table>

