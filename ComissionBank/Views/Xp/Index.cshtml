@model IEnumerable<Xp>
@{
    ViewData["Title"] = "Lançamentos XP";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>
<a asp-action="Create" class="btn btn-default">Novo Lançamento</a>
<a asp-action="Import" class="btn btn-default">Importar XP</a>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <td>@Html.DisplayNameFor(model => model.ClientCode)</td>
            <td>@Html.DisplayNameFor(model => model.ClientId)</td>
            <td>@Html.DisplayNameFor(model => model.AdvisorInitials)</td>
            <td>@Html.DisplayNameFor(model => model.ProductId)</td>
            <td>@Html.DisplayNameFor(model => model.Market)</td>
            <td>@Html.DisplayNameFor(model => model.GrossIncomeValue)</td>
            <td>@Html.DisplayNameFor(model => model.GrossLiquidValue)</td>
            <td>@Html.DisplayNameFor(model => model.NetProductValue)</td>
            <td>@Html.DisplayNameFor(model => model.TransferValue)</td>
            <td>@Html.DisplayNameFor(model => model.LiquidValue)</td>
            <td>@Html.DisplayNameFor(model => model.NetAdvisorValue)</td>
            <td>@Html.DisplayNameFor(model => model.BankValue)</td>
            <td>@Html.DisplayNameFor(model => model.AdvisorValue)</td>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.ClientCode)</td>
            <td>@Html.DisplayFor(x => item.ClientId)</td>
            <td>@Html.DisplayFor(x => item.AdvisorInitials)</td>
            <td>@Html.DisplayFor(x => item.ProductId)</td>
            <td>@Html.DisplayFor(x => item.Market)</td>
            <td>@Html.DisplayFor(x => item.GrossIncomeValueFormated)</td>
            <td>@Html.DisplayFor(x => item.GrossLiquidValueFormated)</td>
            <td>@Html.DisplayFor(x => item.NetProductValueFormated)</td>
            <td>@Html.DisplayFor(x => item.TransferValueFormated)</td>
            <td>@Html.DisplayFor(x => item.LiquidValueFormated)</td>
            <td>@Html.DisplayFor(x => item.NetAdvisorValueFormated)</td>
            <td>@Html.DisplayFor(x => item.BankValueFormated)</td>
            <td>@Html.DisplayFor(x => item.AdvisorValueFormated)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>&nbsp;
            </td>
        </tr>
        }

    </tbody>
</table>