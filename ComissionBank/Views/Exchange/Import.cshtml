@model IEnumerable<Exchange>

@{
    ViewData["Title"] = "Importar Câmbio";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-default">Novo Câmbio</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Cpf)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.AdvisorInitials)</th>
            <th>@Html.DisplayNameFor(model => model.Advisor)</th>
            <th>@Html.DisplayNameFor(model => model.House)</th>
            <th>@Html.DisplayNameFor(model => model.Order)</th>
            <th>@Html.DisplayNameFor(model => model.Currency)</th>
            <th>@Html.DisplayNameFor(model => model.GrossValue)</th>
            <th>@Html.DisplayNameFor(model => model.Value)</th>
            <th>@Html.DisplayNameFor(model => model.Cotation)</th>
            <th>@Html.DisplayNameFor(model => model.Spread)</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.Date)</td>
            <td>@Html.DisplayFor(x => item.Cpf)</td>
            <td>@Html.DisplayFor(x => item.Name)</td>
            <td>@Html.DisplayFor(x => item.AdvisorInitials)</td>
            <td>@Html.DisplayFor(x => item.Advisor)</td>
            <td>@Html.DisplayFor(x => item.House)</td>
            <td>@Html.DisplayFor(x => item.Order)</td>
            <td>@Html.DisplayFor(x => item.Currency)</td>
            <td>@Html.DisplayFor(x => item.GrossValue)</td>
            <td>@Html.DisplayFor(x => item.Value) </td>
            <td>@Html.DisplayFor(x => item.Cotation) </td>
            <td>@Html.DisplayFor(x => item.Spread) </td>

        </tr>
        }

    </tbody>
</table>

