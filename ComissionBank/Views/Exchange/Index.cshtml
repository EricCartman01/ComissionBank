@model IEnumerable<Exchange>
@{
    ViewData["Title"] = "Lançamentos Câmbio";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>
<a asp-action="Create" class="btn btn-default">Novo Lançamento</a>
<a asp-action="Import" class="btn btn-default">Importar Câmbio</a>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <td>@Html.DisplayNameFor(model => model.Date)</td>
            <td>@Html.DisplayNameFor(model => model.ClientId)</td>
            <td>@Html.DisplayNameFor(model => model.AdvisorInitials)</td>
            <td>@Html.DisplayNameFor(model => model.HouseExchange)</td>
            <td>@Html.DisplayNameFor(model => model.Order)</td>
            <td>@Html.DisplayNameFor(model => model.Currency)</td>
            <td>@Html.DisplayNameFor(model => model.GrossValue)</td>
            <td>@Html.DisplayNameFor(model => model.Value)</td>
            <td>@Html.DisplayNameFor(model => model.Cotation)</td>
            <td>@Html.DisplayNameFor(model => model.ComissionType)</td>
            <td>@Html.DisplayNameFor(model => model.LiquidValue)</td>
            <td>@Html.DisplayNameFor(model => model.NetAdvisorValue)</td>
            <td>@Html.DisplayNameFor(model => model.BankValue)</td>
            <td>@Html.DisplayNameFor(model => model.OperatorValue)</td>
            <td>@Html.DisplayNameFor(model => model.AdvisorValue)</td>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.DateFormated)</td>
            <td>@Html.DisplayFor(x => item.ClientId)</td>
            <td>@Html.DisplayFor(x => item.AdvisorInitials)</td>
            <td>@Html.DisplayFor(x => item.HouseExchange)</td>
            <td>@Html.DisplayFor(x => item.Order)</td>
            <td>@Html.DisplayFor(x => item.Currency)</td>
            <td>@Html.DisplayFor(x => item.GrossValueFormated)</td>
            <td>@Html.DisplayFor(x => item.ValueFormated)</td>
            <td>@Html.DisplayFor(x => item.CotationFormated)</td>
            <td>@Html.DisplayFor(x => item.ComissionTypeFormated)</td>
            <td>@Html.DisplayFor(x => item.LiquidValueFormated)</td>
            <td>@Html.DisplayFor(x => item.NetAdvisorValueFormated)</td>
            <td>@Html.DisplayFor(x => item.BankValueFormated)</td>
            <td>@Html.DisplayFor(x => item.OperatorValueFormated)</td>
            <td>@Html.DisplayFor(x => item.AdvisorValueFormated)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>&nbsp;
            </td>
        </tr>
        }

    </tbody>
</table>