@model IEnumerable<Client>
@{
    ViewData["Title"] = "Importar Clientes";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-default">Cadastrar Cliente</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.ClientCode)</th>
            <th>@Html.DisplayNameFor(model => model.AdvisorInitials)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.Name)</td>
            <td>@Html.DisplayFor(x => item.ClientCode)</td>
            <td>@Html.DisplayFor(x => item.AdvisorInitials)</td>
        </tr>
        }

    </tbody>
</table>

