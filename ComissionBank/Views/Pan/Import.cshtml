@model IEnumerable<Pan>
@{
    ViewData["Title"] = "Importar Pan";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-default">Importar Pan</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.ClientCode)</th>
            <th>@Html.DisplayNameFor(model => model.ClientName)</th>
            <th>@Html.DisplayNameFor(model => model.AdvisorInitials)</th>
            <th>@Html.DisplayNameFor(model => model.PanValue)</th>
            <th>@Html.DisplayNameFor(model => model.PanLiquidValue)</th>
            <th>@Html.DisplayNameFor(model => model.NetAdvisorValue)</th>
            <th>@Html.DisplayNameFor(model => model.BankValue)</th>
            <th>@Html.DisplayNameFor(model => model.AdvisorValue)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.Date)</td>
            <td>@Html.DisplayFor(x => item.ClientCode)</td>
            <td>@Html.DisplayFor(x => item.ClientName)</td>
            <td>@Html.DisplayFor(x => item.AdvisorInitials)</td>
            <td>@Html.DisplayFor(x => item.PanValue)</td>
            <td>@Html.DisplayFor(x => item.PanLiquidValue)</td>
            <td>@Html.DisplayFor(x => item.NetAdvisorValue)</td>
            <td>@Html.DisplayFor(x => item.BankValue)</td>
            <td>@Html.DisplayFor(x => item.AdvisorValue)</td>
        </tr>
        }

    </tbody>
</table>

