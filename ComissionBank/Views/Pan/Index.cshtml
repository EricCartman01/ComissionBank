@model IEnumerable<Pan>
@{
    ViewData["Title"] = "Lançamentos PAN";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>
<a asp-action="Import" class="btn btn-default">Importar</a>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <td>@Html.DisplayNameFor(model => model.Date)</td>
            <td>@Html.DisplayNameFor(model => model.ClientCode)</td>
            <td>@Html.DisplayNameFor(model => model.ClientName)</td>
            <td>@Html.DisplayNameFor(model => model.AdvisorInitials)</td>
            <td>@Html.DisplayNameFor(model => model.PanValue)</td>
            <td>@Html.DisplayNameFor(model => model.PanLiquidValue)</td>
            <td>@Html.DisplayNameFor(model => model.NetAdvisorValue)</td>
            <td>@Html.DisplayNameFor(model => model.AdvisorValue)</td>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.Date)</td>
            <td>@Html.DisplayFor(x => item.ClientCode)</td>
            <td>@Html.DisplayFor(x => item.ClientName)</td>
            <td>@Html.DisplayFor(x => item.AdvisorInitials)</td>
            <td>@Html.DisplayFor(x => item.PanValue)</td>
            <td>@Html.DisplayFor(x => item.PanLiquidValue)</td>
            <td>@Html.DisplayFor(x => item.NetAdvisorValue)</td>
            <td>@Html.DisplayFor(x => item.AdvisorValue)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>&nbsp;
            </td>
        </tr>
        }

    </tbody>
</table>