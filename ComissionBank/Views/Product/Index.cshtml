@model IEnumerable<Product>
@{
    ViewData["Title"] = "Produtos";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-default">Cadastrar Produto</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Details)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Name)</td>
                <td>@Html.DisplayFor(x => item.Details)</td>
                <td>@Html.DisplayFor(x => item.Price) </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>&nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>&nbsp;
                </td>
            </tr>
        }

    </tbody>
</table>

