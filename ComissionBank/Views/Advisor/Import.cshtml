@model IEnumerable<Advisor>
@{
    ViewData["Title"] = "Importar Assessores";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-default">Cadastrar Assessor</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Initials)</th>
            <th>@Html.DisplayNameFor(model => model.MatrixName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.XPC)</th>
            <th>@Html.DisplayNameFor(model => model.CMBC)</th>
            <th>@Html.DisplayNameFor(model => model.PROTC)</th>
            <th>@Html.DisplayNameFor(model => model.ITAZ)</th>
            <th>@Html.DisplayNameFor(model => model.JURC)</th>
            <th>@Html.DisplayNameFor(model => model.PAN)</th>
            <th>@Html.DisplayNameFor(model => model.XPTable)</th>
            <th>@Html.DisplayNameFor(model => model.IsHeadQuarter)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => item.Name)</td>
            <td>@Html.DisplayFor(x => item.Initials)</td>
            <td>@Html.DisplayFor(x => item.MatrixName) </td>
            <td>@Html.DisplayFor(x => item.Email) </td>
            <td>@Html.DisplayFor(x => item.XPC) </td>
            <td>@Html.DisplayFor(x => item.CMBC) </td>
            <td>@Html.DisplayFor(x => item.PROTC) </td>
            <td>@Html.DisplayFor(x => item.ITAZ) </td>
            <td>@Html.DisplayFor(x => item.JURC) </td>
            <td>@Html.DisplayFor(x => item.PAN) </td>
            <td>@Html.DisplayFor(x => item.XPTable) </td>
            <td>@Html.DisplayFor(x => item.IsHeadQuarter)</td>
        </tr>
        }

    </tbody>
</table>

