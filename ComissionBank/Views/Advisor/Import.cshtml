@model IEnumerable<Advisor>
@{
    ViewData["Title"] = "Importar Assessores";
}

<br />
<br />
<br />
<h1 class="card-title text-center">@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-default">Importar Assessor</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Initials)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.XPC)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Name)</td>
                <td>@Html.DisplayFor(x => item.Initials)</td>
                <td>@Html.DisplayFor(x => item.Email) </td>
                <td>@Html.DisplayFor(x => item.XPC) </td>
            </tr>
        }

    </tbody>
</table>

